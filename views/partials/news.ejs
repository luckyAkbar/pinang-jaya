<section class="news pt-4">
  <div class="container-fluid">
    <div class="row pt-5">
      <% listBerita.forEach((berita) => { %>
        <div class="col-md-4">
          <div class="card">
            <img class="card-img-top img-fluid" src="/images/<%= berita.filename %>" alt="Foto Berita" style="max-height: 250px;">
            <div class="card-body">
              <h5 class="card-title font-weight-bold"><%= berita.title %></h5>
              <p class="card-text"><%= berita.content.slice(0, 100) %>...</p>
              <a href="/info" class="btn btn-primary rounded mt-4">Selengkapnya</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</section>