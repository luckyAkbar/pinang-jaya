<div class="products">
   <div class="main-products">
      <h2>TRENDING PRODUCTS ON CHAMB</h2>
      <div class="product-slidr">
         <div class="slider">
            <% trendingProducts.forEach((product) => { %>
               <div>
                  <div class="prod-box">
                     <div class="prod-i">
                        <img src="<%= product.imageLink %>" alt="<%= product.imageAlt %>" />
                     </div>
                     <div class="prod-dit clearfix">
                        <div class="dit-t clearfix">
                           <div class="left-ti">
                              <h4><%= product.name %></h4>
                              <p>Dari <span><%= product.UMKMName %></span> under <span>Lights</span></p>
                           </div>
                           <a href="#"><%= product.currency %><%= product.price %></a>
                        </div>
                        <div class="dit-btn clearfix">
                           <a class="wis" href="#"><i class="fa fa-star" aria-hidden="true"></i> Save to wishlist </a>
                           <a class="thi" href="#"><i class="fa fa-thumbs-up" aria-hidden="true"></i> Like this</a>
                        </div>
                     </div>
                  </div>
               </div>
            <% }); %>
         </div>
      </div>
   </div>
</div>
