<div class="page-preview">
  <div class="preview">
     <div class="preview-pic tab-content">
        <% for (let i = 0; i < details.length; i++) { %>
         <div class="tab-pane <%= i === 0 ? 'active' : '' %>" id="pic-<%= i + 1 %>"><img src="<%= imageHrefPrefix %><%= details[i].imageName %>" alt="<%= details[i].imageAlt %>" /></div>
        <% } %>
     </div>
     <ul class="preview-thumbnail nav nav-tabs">
        <% for (let i = 0; i < details.length; i++) { %>
         <li class="<%= i === 0 ? 'active' : '' %>"><a data-target="#pic-<%= i + 1 %>" data-toggle="tab"><img src="<%= imageHrefPrefix %><%= details[i].imageName %>" alt="<%= details[i].imageAlt %>" /></a></li>
         <% } %>
     </ul>
  </div>
</div>