                                                <input id="time" type="time" class="form-control" placeholder="Jam agenda dimulai" max="23" min="0">
                                            </div>
                                            <div class="form-group">
                                              <label for="location" class="col-form-label">Lokasi Pelaksanaan</label>
                                              <input id="location" type="text" class="form-control">
