    <!-- Optional JavaScript -->
    <script src="/dashboard-assets/vendor/jquery/jquery-3.3.1.min.js"></script>
    <script src="/dashboard-assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="/dashboard-assets/vendor/slimscroll/jquery.slimscroll.js"></script>
    <script src="/dashboard-assets/libs/js/main-js.js"></script>
    <script src="/dashboard-assets/vendor/inputmask/js/jquery.inputmask.bundle.js"></script>
    <script>
    $(function(e) {
        "use strict";
        $(".date-inputmask").inputmask("dd/mm/yyyy"),
            $(".phone-inputmask").inputmask("(999) 999-9999"),
            $(".international-inputmask").inputmask("+9(999)999-9999"),
            $(".xphone-inputmask").inputmask("(999) 999-9999 / x999999"),
            $(".purchase-inputmask").inputmask("aaaa 9999-****"),
            $(".cc-inputmask").inputmask("9999 9999 9999 9999"),
            $(".ssn-inputmask").inputmask("999-99-9999"),
            $(".isbn-inputmask").inputmask("999-99-999-9999-9"),
            $(".currency-inputmask").inputmask("$9999"),
            $(".percentage-inputmask").inputmask("99%"),
            $(".decimal-inputmask").inputmask({
                alias: "decimal",
                radixPoint: "."
            }),

            $(".email-inputmask").inputmask({
                mask: "*{1,20}[.*{1,20}][.*{1,20}][.*{1,20}]@*{1,20}[*{2,6}][*{1,2}].*{1,}[.*{2,6}][.*{1,2}]",
                greedy: !1,
                onBeforePaste: function(n, a) {
                    return (e = e.toLowerCase()).replace("mailto:", "")
                },
                definitions: {
                    "*": {
                        validator: "[0-9A-Za-z!#$%&'*+/=?^_`{|}~/-]",
                        cardinality: 1,
                        casing: "lower"
                    }
                }
            })
    });
    </script>
    <script>
        const submitAgendaFormBtn = document.getElementById('submitBtnAgendaForm');
        const postRequestUtil = async (endpoint, body) => {
            try {
                const response = await fetch(endpoint, {
                    method: 'POST',
                    credentials: 'include',
                    redirect: 'follow',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(body),
                });

                return response;
            } catch (e) {
                throw new Error(`post request failed: ${e}`);
            }
        }

        submitAgendaFormBtn.addEventListener('click', async () => {
            const agendaForm = document.forms['agendaForm'];
            const title = agendaForm.elements['title'].value;
            const date = agendaForm.elements['date'].value;
            const time = agendaForm.elements['time'].value;
            const location = agendaForm.elements['location'].value;

            try {
                const rawResult = await postRequestUtil('/dashboard/agenda', {
                    title,
                    date,
                    time,
                    location,
                });
                const result = await rawResult.json();

                if (rawResult.status !== 201) throw new Error(result.message);   
                
                alert(`Agenda kegiatan ${title} sudah dibuat`);
                
                window.location = rawResult.url;
            } catch (e) {
                alert(e.message);
            }
        });
    </script>
</body>
 
