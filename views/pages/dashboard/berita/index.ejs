    <div class="dashboard-main-wrapper">
        <%- include('../../../partials/dashboard/navbar'); %>
        <%- include('../../../partials/dashboard/sidebar'); %>
        <div class="dashboard-wrapper">
            <div class="container-fluid dashboard-content">
                <div class="row">
                    <div class="col-xl-10">
                        <!-- ============================================================== -->
                        <!-- pageheader  -->
                        <!-- ============================================================== -->
                        <div class="row">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <div class="page-header" id="top">
                                    <h2 class="pageheader-title">Berita Desa</h2>
                                    <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                                    <div class="page-breadcrumb">
                                        <nav aria-label="breadcrumb">
                                            <ol class="breadcrumb">
                                                <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                                                <li class="breadcrumb-item active" aria-current="page">Berita</li>
                                            </ol>
                                        </nav>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                          <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="section-block" id="basicform">
                                <h3 class="section-title">Buat Berita</h3>
                                <p>Lengkapi Formulir berikut untuk membuat berita baru.</p>
                            </div>
                            <div class="card">
                                <h5 class="card-header">Formulir Berita</h5>
                                <div class="card-body">
                                    <form id="createBeritaForm">
                                        <div class="form-group">
                                            <label for="judulBerita" class="col-form-label">Judul Berita</label>
                                            <input id="judulBerita" type="text" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label for="isiBerita">Isi berita</label>
                                            <textarea class="form-control" id="isiBerita" rows="3"></textarea>
                                        </div>
                                        <label for="image">Pilih gambar</label>
                                        <input type="file" name="image" id="image" accept="image/png,image/jpg,image/jpeg">
                                    </form>
                                    <button class="btn btn-primary" id="createBeritaBtn">
                                        Buat Berita
                                    </button>
                                </div>
                              </div>
                          </div>
                      </div>
                    </div>
                </div>
                <%- include('../../../partials/dashboard/list-berita'); %>
            </div>
            <!-- ============================================================== -->
            <!-- footer -->
            <!-- ============================================================== -->
