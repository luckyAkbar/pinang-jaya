                                <a href="javascript: void(0);">Support</a>
                                <a href="javascript: void(0);">Contact Us</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- end footer -->
            <!-- ============================================================== -->
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end main wrapper -->
    <!-- ============================================================== -->
    <!-- Optional JavaScript -->
    <script src="/dashboard-assets/vendor/jquery/jquery-3.3.1.min.js"></script>
    <script src="/dashboard-assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="/dashboard-assets/vendor/slimscroll/jquery.slimscroll.js"></script>
    <script src="/dashboard-assets/libs/js/main-js.js"></script>
    <script src="/dashboard-assets/vendor/inputmask/js/jquery.inputmask.bundle.js"></script>
    <script>
    $(function(e) {
        "use strict";
        $(".date-inputmask").inputmask("dd/mm/yyyy"),
            $(".phone-inputmask").inputmask("(999) 999-9999"),
            $(".international-inputmask").inputmask("+9(999)999-9999"),
            $(".xphone-inputmask").inputmask("(999) 999-9999 / x999999"),
            $(".purchase-inputmask").inputmask("aaaa 9999-****"),
            $(".cc-inputmask").inputmask("9999 9999 9999 9999"),
            $(".ssn-inputmask").inputmask("999-99-9999"),
            $(".isbn-inputmask").inputmask("999-99-999-9999-9"),
            $(".currency-inputmask").inputmask("$9999"),
            $(".percentage-inputmask").inputmask("99%"),
            $(".decimal-inputmask").inputmask({
                alias: "decimal",
                radixPoint: "."
            }),

            $(".email-inputmask").inputmask({
                mask: "*{1,20}[.*{1,20}][.*{1,20}][.*{1,20}]@*{1,20}[*{2,6}][*{1,2}].*{1,}[.*{2,6}][.*{1,2}]",
                greedy: !1,
                onBeforePaste: function(n, a) {
                    return (e = e.toLowerCase()).replace("mailto:", "")
                },
                definitions: {
                    "*": {
                        validator: "[0-9A-Za-z!#$%&'*+/=?^_`{|}~/-]",
                        cardinality: 1,
                        casing: "lower"
                    }
                }
            })
    });
    </script>
    <script>
        const createBeritaBtn = document.getElementById('createBeritaBtn');
        const uploadImage = async () => {
            const data = new FormData();
            const [ file ] = document.querySelector('[type=file]').files;
            
            data.append('image', file);

            const response = await fetch('/upload/image', {
                method: 'POST',
                body: data,
            });

            if (response.status !== 202) throw new Error();

            const result = await response.json();

            return result.filename;
        };
        const uploadForm = async (filename) => {
            const beritaForm = document.forms['createBeritaForm'];
            const title = beritaForm.elements['judulBerita'].value;
            const content = beritaForm.elements['isiBerita'].value;

            const response = await fetch('/dashboard/berita', {
                method: 'POST',
                credentials: 'include',
                redirect: 'follow',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ title, content, filename }),
            });

            if (response.status !== 201) throw new Error();
        };
        
        createBeritaBtn.addEventListener('click', async () => {
            try {
                const filename = await uploadImage();
                await uploadForm(filename);

                alert('Berita berhasil dibuat');

                location.reload();
            } catch (e) {
                alert('Berita gagal dibuat');
            }
        })
    </script>
</body>
 
</html>


